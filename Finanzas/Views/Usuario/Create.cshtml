@model Finanzas.Models.Usuario

@{
    ViewBag.Title = "Nuevo";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-btns">
            <a href="#" class="panel-close">&times;</a>
            <a href="#" class="minimize">&minus;</a>
        </div>
        <!-- panel-btns -->
        <h3 class="panel-title">Nuevo</h3>
    </div>
    <div class="panel-body">
        <div class="col-sm-4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Usuario</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombreUsuario)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.nombreUsuario, new { Class = "form-control" })
                        @Html.ValidationMessageFor(model => model.nombreUsuario)
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.pass)
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.pass, new { Class = "form-control" })
                        @Html.ValidationMessageFor(model => model.pass)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Rolid, "Rol")
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("Rolid")
                        @Html.ValidationMessageFor(model => model.Rolid)
                    </div>
                    
                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.activo, new { Checked = true })
                        @Html.LabelFor(model => model.activo)
                    </div>

                    <div class="btn-group">
                        @Html.ActionLink("Atras", "Index", null, new { Class = "btn btn-info" })
                        <input class="btn btn-success" type="submit" value="Nuevo" />
                    </div>
                </fieldset>
        }
        </div>
    </div>
    <!-- panel-body -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
